<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBack"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingIdentifyActivity">
    <RelativeLayout
        android:background="@drawable/line_bot"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/settingStudentBackBtn"
            android:padding="13dp"
            android:contentDescription="@null"
            android:src="@mipmap/btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:text="@string/setting_identify"
            android:layout_centerInParent="true"
            android:textColor="@color/colorDark"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/settingStudentSubmit"
            android:layout_alignParentRight="true"
            android:text="@string/submit"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/colorTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:background="@drawable/line_both"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorDarkText"
            android:text="学校"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/settingStudentSchool"
            android:textColor="@color/colorText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:hint="输入您的学校"
            android:maxLines="1"
            android:gravity="right"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:src="@mipmap/btn_go_gray"
            android:contentDescription="@null"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:background="@drawable/line_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorDarkText"
            android:text="专业"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/settingStudentMajor"
            android:textColor="@color/colorText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:hint="输入您的专业"
            android:maxLines="1"
            android:gravity="right"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:src="@mipmap/btn_go_gray"
            android:contentDescription="@null"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:background="@drawable/line_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorDarkText"
            android:text="学号"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/settingStudentID"
            android:textColor="@color/colorText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="number"
            android:hint="输入您的学号"
            android:maxLines="1"
            android:gravity="right"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:src="@mipmap/btn_go_gray"
            android:contentDescription="@null"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:background="@drawable/line_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorDarkText"
            android:text="入学年份"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/settingStudentTime"
            android:textColor="@color/colorText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:hint="输入您的入学年份"
            android:maxLines="1"
            android:gravity="right"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:src="@mipmap/btn_go_gray"
            android:contentDescription="@null"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical"
        android:background="@drawable/line_both"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorDarkText"
            android:text="学生证上传（请横向拍摄）"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="2px"
            android:id="@+id/settingStudentPhoto"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_add_default"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="7dp"
        android:textColor="@color/colorDefaultText"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="注：填写有效的学校信息，方可体验完整的运动社区功能。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>