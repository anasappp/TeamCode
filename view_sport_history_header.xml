<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="25dp"
    android:layout_marginBottom="10dp"
    android:background="@color/colorTheme"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sportHisStepAll"
            android:text="0"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="48sp"
            android:textColor="@color/colorLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:text="步"
            android:layout_toRightOf="@id/sportHisStepAll"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@id/sportHisStepAll"
            android:textColor="@color/colorLight"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:text="平台上全部运动步数总计"
            android:textSize="14sp"
            android:textColor="@color/colorLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sportHisTimeAll"
                android:text="0h"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="累计时长"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sportHisOcalAll"
                android:text="0cal"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="累计消耗"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sportHisDisAll"
                android:text="0m"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="累计距离"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>